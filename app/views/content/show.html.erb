<main>
    <div class="row">
      <div class="col s8 offset-s2">
        <div class="card">
          <div class="card-content">

            <p><%= @content.content %></p>

        </div>
        <div class="card-action right-align">
            <% if user_signed_in? && current_user.id == @content.user_id %>

              <%= link_to 'EDIT', "/blog/#{@content.id}/edit", method: :get %>


              <%= link_to 'DELETE', "/blog/#{@content.id}", method: :delete %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
